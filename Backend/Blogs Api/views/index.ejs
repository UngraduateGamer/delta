<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All posts</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h2>All Post</h2>
    <div class="group">
        <% for(let post of posts){%>
            <div class="info">
                <div class="username"><%=post.username%></div>
                <div class="content"><%=post.content%></div>
                <div class="btns"> 
                    <a href="http://localhost:8080/posts/post/<%= post.id %> " class="btn">See details</a>
                    <a href="http://localhost:8080/posts/edit/<%= post.id %> " class="btn">Edit Post</a>
                    <form action="posts/<%=post.id%>?_method=DELETE" method="post" style="display: inline-block; margin-bottom: 0;">
                        <button class="btn" style="background-color: darkred;">Delete Post</button>
                    </form>
                </div>
            </div>
        <% }%>
    </div>
    <a href="http://localhost:8080/posts/new" class="btn">Add new post</a>
</body>
</html>